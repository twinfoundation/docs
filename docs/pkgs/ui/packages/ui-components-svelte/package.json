{
	"name": "@twin.org/ui-components-svelte",
	"version": "0.0.1-next.1",
	"description": "UI component for svelte",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/ui.git",
		"directory": "packages/ui-components-svelte"
	},
	"author": "martyn.janes@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"merge-locales": "merge-locales --config ./locales/merge-locales-config.json",
		"docs:clean": "echo Nothing to clean",
		"docs": "npm run docs:clean",
		"package": "svelte-package",
		"dist": "npm run build && npm run check && npm run merge-locales && npm run docs && npm run package"
	},
	"dependencies": {
		"@twin.org/qr": "next",
		"flowbite-svelte": "^0.46.16",
		"flowbite-svelte-blocks": "^1.1.3",
		"flowbite-svelte-icons": "^1.6.1",
		"flowbite-typography": "^1.0.3"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.5.28",
		"svelte": "^4.2.19"
	},
	"devDependencies": {
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@tailwindcss/typography": "^0.5.15",
		"@twin.org/merge-locales": "next",
		"autoprefixer": "^10.4.20",
		"globals": "^15.9.0",
		"postcss": "^8.4.47",
		"svelte-check": "^4.0.2",
		"tailwindcss": "^3.4.12",
		"typescript": "^5.6.2",
		"vite": "^5.4.6",
		"vitest": "^2.1.1"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./config/*.cjs": "./dist/config/*.cjs",
		"./css/*.css": "./dist/css/*.css"
	},
	"files": [
		"dist",
		"docs"
	]
}
