{
	"name": "@gtsc/workbench-ui",
	"version": "0.0.1-next.1",
	"description": "UI to demonstrate the APIs",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:integration": "playwright test",
		"test:unit": "vitest --run",
		"merge-locales": "merge-locales --config ./locales/merge-locales-config.json",
		"docs:clean": "rimraf docs/overview.md",
		"docs:copy-overview": "copyfiles README.md docs",
		"docs:rename-overview": "node -e \"require('fs/promises').rename('docs/README.md','docs/overview.md')\"",
		"docs:remove-header": "replace-in-files --regex='^.*overview.md.*?\\s\\s.*?\\s\\s' --string='docs/' --replacement='' \"docs/**/*.md\"",
		"docs": "npm run docs:clean && npm run docs:copy-overview && npm run docs:rename-overview && npm run docs:remove-header",
		"dist": "npm run build && npm run check && npm run merge-locales && npm run test && npm run docs"
	},
	"dependencies": {
		"@gtsc/api-auth-entity-storage-rest-client": "next",
		"@gtsc/api-models": "next",
		"@gtsc/api-rest-client": "next",
		"@gtsc/attestation-rest-client": "next",
		"@gtsc/attestation-models": "next",
		"@gtsc/blob-storage-rest-client": "next",
		"@gtsc/core": "next",
		"@gtsc/crypto": "next",
		"@gtsc/data-core": "next",
		"@gtsc/data-json-ld": "next",
		"@gtsc/identity-models": "next",
		"@gtsc/identity-rest-client": "next",
		"@gtsc/qr": "next",
		"@gtsc/standards-w3c-did": "next",
		"schema-dts": "1.1.2"
	},
	"devDependencies": {
		"@gtsc/merge-locales": "next",
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.13",
		"autoprefixer": "^10.4.19",
		"flowbite-svelte": "^0.46.15",
		"flowbite-svelte-blocks": "^1.1.3",
		"flowbite-svelte-icons": "^1.6.1",
		"flowbite-typography": "^1.0.3",
		"globals": "^15.0.0",
		"postcss": "^8.4.38",
		"replace-in-files-cli": "2.2.0",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.4",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.0.0"
	},
	"type": "module"
}
