		"@sveltejs/kit": "^2.5.28",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tailwindcss/typography": "^0.5.15",
		"autoprefixer": "^10.4.20",
		"flowbite-svelte-icons": "^1.6.1",
		"globals": "^15.9.0",
		"postcss": "^8.4.47",
		"svelte": "^4.2.19",
		"svelte-check": "^4.0.2",
		"tailwindcss": "^3.4.12",
		"typescript": "^5.6.2",
