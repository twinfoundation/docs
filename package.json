	},
	"devDependencies": {
		"@docusaurus/module-type-aliases": "^3.4.0",
		"@docusaurus/tsconfig": "^3.4.0",
		"@docusaurus/types": "^3.4.0",
		"cspell": "^8.6.0",
		"markdownlint-cli": "^0.39.0",
		"prettier": "^3.2.5",
		"typescript": "~5.2.2"
	},
	"browserslist": {
		"production": [
			">0.5%",
			"not dead",
